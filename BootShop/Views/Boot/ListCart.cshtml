<script>
    function MinusQuantity(CartId) {
        $.ajax({
            type: 'POST',
            url: '/Boot/UpdateMinusCart?id=' + CartId,
            success: function (response) {
                if (response.success) {
                    alert("Updated");
                    window.location.href = "/Boot/ListCart"
                }
                else {
                    alert("Cannot update");
                }
            }
        });
    };

    function DeleteCart(CartId) {
        $.ajax({
            type: 'POST',
            url: '/Boot/DeleteCart?id=' + CartId,
            success: function (response) {
                if (response.success) {
                    alert("Deleted");
                    window.location.href = "/Boot/ListCart"
                }
                else {
                    alert("Cannot Delete");
                }
            }
        });
    };
    function PlusQuantity(CartId) {
        $.ajax({
            type: 'POST',
            url: '/Boot/UpdatePlusCart?id=' + CartId,
            success: function (response) {
                if (response.success) {
                    alert("Updated");
                    window.location.href = "/Boot/ListCart"
                }
                else {
                    alert("Cannot update");
                }

            }
        });
    };
    function ShowCart() {
        $("#form").trigger("reset");
        // $("#StId").val(0);
        $("#ModalTitle").html("Add New Student");
        $("#MyModal").modal("show");
        // thử r nhưng cũng k đc luôn
    };
</script>


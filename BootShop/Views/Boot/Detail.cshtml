<script>
    $('#AddCartForm').submit(function (e) {
        e.preventDefault();
        $.ajax({
            type: 'POST',
            url: "/Boot/AddToCart",
            data: {
                'Id': $("#BootId").val(),
                'Name': $("#BootName").val(),
                'Price': $("#BootPrice").val(),
                'Picture': $("#BootPicture").val(),
                'SizeName': $("#sizeName option:selected").text(),
            },
            success: function (response) {
                if (response.success) {
                    alert("SUCCESS");
                }
                else {
                    $("#error").html("Please choose size");
                    //ong chay lai thu xem
                    //cho nay hien len xong r tamat dung ko
                    //sao ki v ta
                    // đúng r ông
                    //e.preventDefault();
                }
            },
            error: function () {
                alert('Error in ajax');
   
                $("#error").html("Please choose size");
            }
        });
    })
       
    function ShowCart() {
        $("#form").trigger("reset");
       // $("#StId").val(0);
        $("#ModalTitle").html("Add New Student");
        $("#MyModal").modal("show");
        // thử r nhưng cũng k đc luôn
    };
  
</script>


